<Window x:Class="client.Administrator.Pages.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client.Administrator.Pages"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Center" Margin="-20,144,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Margin="30,175,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="19" Width="180" Height="29" TextChanged="txtUsername_TextChanged"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Center" Margin="-20,234,0,0" VerticalAlignment="Top" Width="150"/>
        <PasswordBox x:Name="txtPassword"  HorizontalAlignment="Center" Margin="30,265,0,0" VerticalAlignment="Top" FontSize="19" Width="180" Height="29" Password="" PasswordChanged="txtPassword_PasswordChanged"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="150,324,0,0" VerticalAlignment="Top" Height="40" Width="75"  RenderTransformOrigin="-0.333,0.126" Click="btnLogin_Click"/>
    </Grid>
</Window>
